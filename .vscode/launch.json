{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test current file",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--test",
        "${file}"
      ],
      "cwd": "${workspaceRoot}",
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
    }
  ]
}
